@model List<Member>
<h2>Members List</h2>
<a href="/Member/Create" class="btn btn-primary mb-3">Add New Member</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Member ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Email</td>
                <td>@m.MemberId</td>
                <td>
                    <a href="/Member/Edit/@m.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Member/Delete/@m.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

